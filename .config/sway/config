mode "music" {
	bindsym p exec playerctl play-pause
	bindsym comma exec playerctl previous
	bindsym period exec playerctl next
	bindsym Return mode "default"
	bindsym Escape mode "default"
}
bindsym $mod+m mode "music"
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

include /etc/sway/config.d/*
include ~/.config/sway/config.d/*

#output eDP-1 resolution 2560x1440 position 1920,0
#output HDMI-A-1 resolution 1920x1080 position 0,0
#output DP-4 resolution 3840x2160 position 4480,0

set $laptop eDP-1
bindswitch --locked lid:on output $laptop disable
bindswitch --locked lid:off output $laptop enable

bindsym $mod+Alt+$right move workspace to output right
bindsym $mod+Alt+$left move workspace to output left

bindsym $mod+l exec swaylock

bindsym XF86MonBrightnessDown exec brightnessctl set 5%-
bindsym XF86MonBrightnessUp exec brightnessctl set 5%+
bindsym XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym XF86AudioRaiseVolume exec amixer set Master 1%+
bindsym XF86AudioLowerVolume exec amixer set Master 1%-
bindsym XF86AudioMicMute exec pactl set-source-mute 1 toggle

#
# Input Config
#

input 2:7:SynPS/2_Synaptics_TouchPad {
    tap enabled
    natural_scroll enabled
}

input * xkb_layout gb
input * xkb_variant basic
input * xkb_options "misc:extend,lv5:caps_switch_lock,grp:shifts_toggle,compose:menu"

bindsym Alt+Shift+1 input * xkb_layout gb; input * xkb_variant basic; input * xkb_options "misc:extend,lv5:caps_switch_lock,grp:shifts_toggle,compose:menu"; exec notify-send "Switched layout to gb-basic"
bindsym Alt+Shift+2 input * xkb_layout gb; input * xkb_variant colemak; exec notify-send "Switched layout to gb-colemak"

bindsym Alt+Shift+3 input * xkb_layout gb; input * xkb_variant cmk_ed_ks; input * xkb_model pc105curl-z; input * xkb_options "misc:extend,lv5:caps_switch_lock,grp:shifts_toggle,compose:menu,misc:cmk_curl_dh"; exec notify-send "Switch layout to gb-colemak-mod-dh"


bindcode $mod+Shift+61 exec imv ~/Pictures/mod_dh_extend.png
bindcode $mod+61 exec imv ~/Pictures/mod_dh_main.png

for_window [class="imv"] floating enable


# Gaps Config
smart_gaps on
gaps inner 15
gaps outer 15

#bindsym $mod+s			gaps inner current plus 5
bindsym $mod+Shift+s		gaps inner current minus 5
bindsym $mod+z			gaps outer current plus 5 
bindsym $mod+Shift+z		gaps outer current minus 5
bindsym $mod+Shift+d		gaps inner current set 0; gaps outer current set 0

hide_edge_borders both
default_border none

bindsym Print exec ~/.config/sway/scripts/screenshot-focused.sh; exec notify-send "took screenshot"
bindsym Shift+Print exec ~/.config/sway/scripts/screenshot-selection.sh

# First I have a tmux window used for background scripts.
# # I'll later bind this to mod+u.
for_window [instance="tmuxdd"] floating enable
for_window [instance="tmuxdd"] resize set 625 450
for_window [instance="tmuxdd"] move scratchpad
for_window [instance="tmuxdd"] border pixel 3
# for_window [instance="tmuxdd"] sticky enable


#for_window [class="SpeedCrunch"] floating enable

assign [class="Code*"] workspace 3
for_window [class="Spotify*"] move to workspace 10

exec waybar
exec nm-applet
exec powerline-daemon
exec mako
exec redshift
exec ibus-daemon --xim
exec kanshi

