#!/bin/bash

echo Wiping previous tpm2 keyslots
echo System
systemd-cryptenroll --wipe-slot=tpm2 /dev/vg.system/lv.cryptsystem
echo Swap
systemd-cryptenroll --wipe-slot=tpm2 /dev/vg.system/lv.cryptswap

echo Enrolling!
echo System
systemd-cryptenroll --tpm2-device=auto --tpm2-pcrs=0+1+2+3+4+5+7+8 --tpm2-with-pin=yes /dev/vg.system/lv.cryptsystem
echo Swap
systemd-cryptenroll --tpm2-device=auto --tpm2-pcrs=0+1+2+3+4+5+7+8 --tpm2-with-pin=yes /dev/vg.system/lv.cryptswap

